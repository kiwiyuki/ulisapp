<%= simple_form_for @participant, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@participant[:name]) %>
  <%= f.input :grade %>
  <%= error_span(@participant[:grade]) %>
  <%= f.input :comment %>
  <%= error_span(@participant[:comment]) %>
  <%= f.input :event_id %>
  <%= error_span(@participant[:event_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                participants_path, :class => 'btn btn-default' %>
<% end %>
