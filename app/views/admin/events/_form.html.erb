<%= simple_form_for [:admin, @event], wrapper: "horizontal_form", :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :event_name, required: true, input_wrapper_html: { class: "col-xs-2" } %>
    <%= f.input :event_date, as: :datetime_picker, required: true, input_wrapper_html: { class: "col-xs-4" } %>
    <%= f.input :summary, input_wrapper_html: { class: "col-xs-5" } %>
    <%= f.input :reception, as: :hidden, :value => "true" %>

    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), events_path, :class => 'btn btn-default pull-right' %>
    <%= f.button :submit, "complete", :class => 'btn-primary pull-right' %>

<% end %>