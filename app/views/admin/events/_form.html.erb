<%= simple_form_for [:admin, @event], wrapper: "horizontal_form", :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :event_name, required: true, input_wrapper_html: { class: "col-xs-10 col-md-4" } %>
    <%= f.input :event_date, as: :datetime_picker, required: true, input_wrapper_html: { class: "col-xs-10 col-md-4" } %>
    <%= f.input :summary, input_wrapper_html: { class: "col-xs-10 col-md-5" } %>
    <%= f.input :reception, as: :hidden, :value => "true" %>

    <%= f.button :submit, "Complete", :class => 'btn-primary col-xs-4 col-md-2 col-md-offset-10' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), admin_events_path, :class => 'btn btn-default  col-xs-4 col-md-2 col-md-offset-10' %>

<% end %>